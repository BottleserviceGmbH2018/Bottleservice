<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161b3b"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="ch.digitalmediafactory.bottleservice.signupcompanylocation">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:padding="20dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:orientation="vertical">



            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:textSize="32dp"
                android:text="@string/where_s_your_company_located"
                android:textColor="#f2f2fd" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:textSize="15dp"
                android:text="@string/address_1"
                android:textAllCaps="true"
                android:textColor="#f2f2fd" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhiteTransparent"
                >

            <EditText
                android:id="@+id/etCompanyaddress"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:textSize="18dp"
                android:hint="Ex. Unit 1234 Ruby Tower, 25th Street Ave."
                android:textColorHint="#858f98"
                android:inputType="textPersonName"
                android:textColor="#f2f2fd" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:textSize="15dp"
                android:text="@string/address_2"
                android:textAllCaps="true"
                android:textColor="#f2f2fd" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhiteTransparent"
                >

            <EditText
                android:id="@+id/etCompanyaddress2"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:textSize="18dp"
                android:backgroundTint="@android:color/white"
                android:hint="Ex. Unit 1234 Ruby Tower, 25th Street Ave."
                android:textColorHint="#858f98"
                android:alpha="0.8"
                android:inputType="textPersonName"
                android:textColor="#f2f2fd" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:textSize="15dp"
                android:text="@string/city"
                android:textAllCaps="true"
                android:textColor="#f2f2fd" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhiteTransparent"
                >

            <EditText
                android:id="@+id/etCompanycity"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:textSize="18dp"
                android:backgroundTint="@android:color/white"
                android:hint="Ex. Las PiÃ±as"
                android:textColorHint="#858f98"
                android:alpha="0.8"
                android:inputType="textPersonName"
                android:textColor="#f2f2fd" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:textSize="15dp"
                android:text="@string/postal_code"
                android:textAllCaps="true"
                android:textColor="#f2f2fd" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorWhiteTransparent"
                >

            <EditText
                android:id="@+id/etCompanypostal"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="20"
                android:backgroundTint="@android:color/white"
                android:textSize="18dp"
                android:hint="Ex. 4102"
                android:textColorHint="#858f98"
                android:alpha="0.8"
                android:inputType="textPersonName"
                android:textColor="#f2f2fd" />

            </android.support.design.widget.TextInputLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_marginTop="25dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/colorAccent"
                android:innerRadius="0dp"
                android:layout_gravity="end"
                android:shape="ring"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/bRegisterCompanylocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_navigate_next_black_42dp"></ImageView>
            </android.support.v7.widget.CardView>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>