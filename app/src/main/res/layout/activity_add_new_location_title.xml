<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ch.digitalmediafactory.bottleservice.AddNewLocationTitle">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:padding="20dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:textSize="28dp"
                android:text="@string/give_your_place_a_title"
                android:textColor="#f2f2fd" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etTitleLocation"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="30"
                    android:hint="Ex. XYZ Bar"
                    android:textColorHint="#858f98"
                    android:alpha="0.8"
                    android:inputType="textLongMessage"
                    android:textColor="#f2f2fd" />


                <Button
                    android:id="@+id/bButtonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="150dp"
                    android:adjustViewBounds="true"
                    android:backgroundTint="#7695f1"
                    android:scaleType="centerInside"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="#f2f2fd" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
