<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="190dp"
        android:layout_height="250dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <android.support.v7.widget.CardView
                android:id="@+id/cardViewBar"
                android:layout_width="210dp"
                android:layout_height="150dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                >

            <ImageView
                android:id="@+id/imagebar"
                android:layout_width="240dp"
                android:layout_height="155dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_button"
                android:scaleType="centerCrop"
                android:src="@drawable/party"
                />

                <TextView
                    android:id="@+id/BarId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/text5"
                    android:layout_width="27dp"
                    android:layout_height="23dp"
                    android:layout_gravity="end"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:text="5.0"
                    android:textAllCaps="false"
                    android:background="#7695f1"
                    android:textColor="@color/colorWhite" />

                <TextView
                    android:paddingStart="8dp"
                    android:id="@+id/lastminute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text2"
                    android:autoSizeMaxTextSize="15sp"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="start"
                    android:layout_gravity="bottom"
                    android:text="Last Minute Reservation"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:background="#ffbb33"
                    android:textSize="12dp"
                    android:visibility="visible" />



            </android.support.v7.widget.CardView>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:id="@+id/barname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bar Name"
                android:layout_below="@id/cardViewBar"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:gravity="start"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />

            <TextView
                android:layout_marginStart="23dp"
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_00_0_km_address"
                android:layout_below="@id/barname"
                android:textColor="@color/colorDarkGray"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:gravity="start"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opens at "
                android:layout_below="@id/text4"
                android:textColor="@color/colorGreen"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:gravity="start"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />



            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 PM"
                android:textColor="@color/colorGreen"
                android:textSize="12dp"
                android:layout_below="@id/text4"
                android:layout_toEndOf="@+id/text2"
                android:textAllCaps="false"
                android:gravity="start"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />






        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>