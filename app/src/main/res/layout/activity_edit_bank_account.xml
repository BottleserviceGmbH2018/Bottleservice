<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ch.digitalmediafactory.bottleservice.EditBankAccount">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Dashboard">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:backgroundTint="@color/Dashboard"
                    android:clickable="true"
                    android:onClick="buttonEditPayout"
                    android:paddingStart="1dp"
                    app:srcCompat="@drawable/back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageButton"
                    android:autoLink="all"
                    android:text="@string/profile"
                    android:textColor="#f2f2fd"
                    android:textSize="18dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/owner_credit_card_black_24dp"
                    android:layout_gravity="start"
                    />

                    <TextView
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:textSize="17dp"
                        android:text="IBAN No."
                        android:textColor="#f2f2fd" />


                    <EditText
                        android:layout_marginStart="52dp"
                        android:layout_marginTop="27dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:textSize="18dp"
                        android:hint="1234 1563 1234 1243 6231 2"
                        android:textColorHint="@color/colorWhiteTransparent"/>


                    <TextView
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="72dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:textSize="17dp"
                        android:text="@string/format_xxxx_xxxx_xxxx_xxxx_xxxx_x"
                        android:textColor="#f2f2fd" />

                </RelativeLayout>



                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:textSize="18dp"
                    android:text="@string/bank_name"
                    android:textColor="#f2f2fd" />

                <EditText
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:textColorHint="#858f98"
                    android:alpha="0.8"
                    android:inputType="textPersonName"
                    android:textColor="#f2f2fd" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:textSize="18dp"
                    android:text="@string/bank_address_1"
                    android:textColor="#f2f2fd" />

                <EditText

                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:textColorHint="#858f98"
                    android:layout_marginBottom="10dp"
                    android:alpha="0.8"
                    android:inputType="textPersonName"
                    android:textColor="#f2f2fd" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:textSize="18dp"
                    android:text="@string/bank_address_2"
                    android:textColor="#f2f2fd" />

                <EditText
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:textColorHint="#858f98"
                    android:alpha="0.8"
                    android:inputType="textPersonName"
                    android:textColor="#f2f2fd" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:textSize="18dp"
                    android:text="@string/city"
                    android:textColor="#f2f2fd" />

                <EditText
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:textColorHint="#858f98"
                    android:alpha="0.8"
                    android:inputType="textPersonName"
                    android:textColor="#f2f2fd" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:textSize="18dp"
                    android:text="@string/postal_code"
                    android:textColor="#f2f2fd" />

                <EditText
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:textColorHint="#858f98"
                    android:alpha="0.8"
                    android:inputType="textPersonName"
                    android:textColor="#f2f2fd" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/cancel"
                        android:textAllCaps="true"
                        android:layout_marginEnd="100dp"
                        android:gravity="end"
                        android:textColor="@color/colorWhite"
                        android:textColorHighlight="@color/colorPrimaryDark"
                        android:onClick="buttonEditPayoutOptionsAccount"
                        android:clickable="true"
                        android:textSize="19dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="end"
                        android:text="@string/ok"
                        android:clickable="true"
                        android:onClick="buttonEditPayout"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textColorHighlight="@color/colorPrimaryDark"
                        android:textSize="19dp" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
