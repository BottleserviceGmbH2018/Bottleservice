<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ch.digitalmediafactory.bottleservice.LoungeAccount">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavView_Bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:itemBackground="@color/Dashboard"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/nav_items">
    </android.support.design.widget.BottomNavigationView>



        <ScrollView
            android:layout_marginBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton

                        android:id="@+id/imageButton18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:clickable="true"
                        android:onClick="buttonEditProfileView"
                        app:srcCompat="@drawable/owner_account_circle_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageButton18"
                        android:autoLink="all"
                        android:clickable="true"
                        android:onClick="buttonEditProfileView"
                        android:text="@string/edit_profile"
                        android:textAlignment="textStart"
                        android:textColor="#f2f2fd"
                        android:textSize="15dp"
                        android:id="@+id/textView16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView16"
                        android:layout_toEndOf="@+id/imageButton18"
                        android:autoLink="all"
                        android:clickable="true"
                        android:onClick="buttonEditProfileView"
                        android:text="Dave Orlate - david.r.orlarte@gmail.com"
                        android:textAlignment="textStart"
                        android:textColor="#f2f2fd"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        app:srcCompat="@drawable/owner_settings_black_24dp"
                        android:clickable="true"
                        android:onClick="buttonEditSettingsView"
                        android:id="@+id/imageButton17" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageButton17"
                        android:autoLink="all"
                        android:clickable="true"
                        android:onClick="buttonEditSettingsView"

                        android:text="@string/settings"
                        android:textAlignment="textStart"
                        android:textColor="#f2f2fd"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        app:srcCompat="@drawable/owner_credit_card_black_24dp"
                        android:clickable="true"
                        android:onClick="buttonEditPayoutView"
                        android:id="@+id/imageButton16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageButton16"
                        android:autoLink="all"
                        android:clickable="true"
                        android:onClick="buttonEditPayoutView"

                        android:text="@string/payout_methods"
                        android:textAlignment="textStart"
                        android:textColor="#f2f2fd"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        app:srcCompat="@drawable/owner_contact_phone_black_24dp"
                        android:id="@+id/imageButton15" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageButton15"
                        android:autoLink="all"

                        android:text="@string/contact_us"
                        android:textAlignment="textStart"
                        android:textColor="#f2f2fd"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:backgroundTint="@color/colorPrimary"
                        app:srcCompat="@drawable/owner_feedback_black_24dp"
                        android:id="@+id/imageButton14" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageButton14"
                        android:autoLink="all"
                        android:text="@string/feedback"
                        android:textAlignment="textStart"
                        android:textColor="#f2f2fd"
                        android:textSize="15dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        app:srcCompat="@drawable/owner_thumb_up_black_24dp"
                        android:id="@+id/imageButton13" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageButton13"
                        android:autoLink="all"
                        android:text="@string/like_bottleservice_on_facebook"
                        android:textAlignment="textStart"
                        android:textColor="#f2f2fd"
                        android:textSize="15dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWhiteTransparent"></LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        app:srcCompat="@drawable/owner_power_settings_new_black_24dp"
                        android:id="@+id/imageButton12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageButton12"
                        android:autoLink="all"
                        android:clickable="true"
                        android:onClick="LoungeLogout"
                        android:text="@string/sign_out"
                        android:textAlignment="textStart"
                        android:textColor="#f2f2fd"
                        android:textSize="15dp" />



                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:autoLink="all"
                        android:textAlignment="center"
                        android:layout_marginBottom="30dp"
                        android:text="@string/terms_of_service_and_privacy_policy"
                        android:textColor="#67d8cc"
                        android:textSize="15dp" />


                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:autoLink="all"
                    android:paddingBottom="20dp"
                    android:text="@string/digital_media_factory_android_2_5_2_beta"
                    android:textAlignment="center"
                    android:textColor="#f2f2fd"
                    android:textSize="10dp" />


            </LinearLayout>

        </ScrollView>




</RelativeLayout>
