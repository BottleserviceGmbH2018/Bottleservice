<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewEvents"
                android:layout_width="400dp"
                android:layout_height="170dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp"
                >


                <ImageView
                    android:id="@+id/imageClientLounge"
                    android:layout_width="400dp"
                    android:layout_height="170dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_button"
                    android:scaleType="centerCrop"
                    android:src="@drawable/party"
                    />

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_alignStart="@id/text2"
                android:layout_marginTop="2dp"
                android:id="@+id/ClientBarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lounge Name"
                android:layout_below="@id/cardViewEvents"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:gravity="start"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />

            <TextView
                android:id="@+id/BarId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>



            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_00_0_km_address"
                android:layout_below="@id/ClientBarName"
                android:textColor="@color/colorDarkGray"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:gravity="start"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />


            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opens_at_8_00_pm"
                android:layout_below="@id/text2"
                android:textColor="@color/colorGreen"
                android:layout_alignStart="@id/text2"
                android:textSize="12dp"
                android:textAllCaps="false"
                android:gravity="start"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"
                />


            <TextView
                android:id="@+id/text6"
                android:layout_width="27dp"
                android:layout_height="23dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="5.0"
                android:textAllCaps="false"
                android:background="#7695f1"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>