<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/barCardView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/spinner"

        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp">


        <ImageView
            android:id="@+id/imageBarLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            />


    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/spinner"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/locationBarname"
        android:layout_alignEnd="@+id/frameLayout"
        android:background="@drawable/round_more_vert_black_24"
        android:backgroundTint="@color/colorDarkGray"
        android:gravity="center"
        android:scaleType="fitCenter" />


    <TextView
        android:id="@+id/locationBarname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="start"
        android:autoSizeMaxTextSize="13sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:text="Bar"
        android:textColor="@color/Dashboard"
        android:layout_toStartOf="@+id/barCardView"/>



    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLightGray"
        android:id="@+id/frameLayout"></FrameLayout>

</RelativeLayout>

