<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ch.digitalmediafactory.bottleservice.AddSetLocationPhoto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:padding="20dp"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:textSize="28dp"
                android:text="@string/are_you_ready_to_add_photos"
                android:textColor="#f2f2fd" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/every_guests_love_to_see_photos_of_the_place_do_you_have_time_to_now_to_take_them"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                />



            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/for_the_slider"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                />


            <Button
                android:id="@+id/bAddPhoto"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="@string/add_photos_now"
                android:clickable="true"
                android:background="@drawable/my_button_bg"
                android:backgroundTint="#7695f1"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#f2f2fd"
                android:textSize="15sp" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="180dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorPrimary"
                >

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="350dp"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"/>


            </android.support.v7.widget.CardView>



            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/for_the_overall_layout_or_map"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                />


            <Button
                android:id="@+id/bAddPhotoMap"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="@string/add_photos_now"
                android:clickable="true"
                android:background="@drawable/my_button_bg"
                android:backgroundTint="#7695f1"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#f2f2fd"
                android:textSize="15sp" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_width="350dp"
                android:layout_height="180dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="35dp"
                android:backgroundTint="@color/colorPrimary"
                >

            <ImageView
                android:id="@+id/ivMap"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"/>

            </android.support.v7.widget.CardView>


                <Button
                    android:id="@+id/bContinue"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end"
                    android:adjustViewBounds="true"
                    android:background="@drawable/comeback_bg"
                    android:text="@string/come_back_to_it_later"
                    android:textAllCaps="false"
                    android:textColor="#7695f1" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
