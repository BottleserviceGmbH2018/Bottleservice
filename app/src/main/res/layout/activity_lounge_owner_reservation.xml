<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="ch.digitalmediafactory.bottleservice.LoungeOwnerReservation">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Dashboard">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    android:backgroundTint="@color/Dashboard"
                    android:clickable="true"
                    android:paddingStart="1dp"
                    android:onClick="buttonLoungeDashboardBack"
                    app:srcCompat="@drawable/back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageButton"
                    android:autoLink="all"
                    android:text="@string/reservation"
                    android:textColor="#f2f2fd"
                    android:textSize="18dp" />

            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageButton"
                    android:autoLink="all"
                    android:text="@string/news"
                    android:textColor="#f2f2fd"
                    android:textSize="18dp"
                    android:textStyle="bold"/>



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/Dashboard"
                        >
                        <LinearLayout
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="#f9a448"
                            android:padding="10dp"
                            >
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="left"
                            android:layout_marginStart="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="@string/date"
                                android:textAlignment="center"
                                android:textColor="#6983d3"
                                android:textSize="10sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="left"
                            android:layout_marginStart="75dp"
                            >

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/client_name"
                                android:layout_gravity="center"
                                android:textColor="#6983d3"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                android:layout_marginEnd="13dp"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="50dp"
                            >

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/location"
                                android:layout_gravity="center"
                                android:textColor="#6983d3"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                android:layout_marginEnd="13dp"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="right"
                            android:layout_marginEnd="5dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/booking"
                                android:layout_gravity="center"
                                android:textColor="#6983d3"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/status"
                                android:layout_gravity="center"
                                android:textColor="#6983d3"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                />

                        </LinearLayout>




                    </android.support.v7.widget.CardView>

                </LinearLayout>



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleViewLoungeOwnerReservation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>






            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</RelativeLayout>
