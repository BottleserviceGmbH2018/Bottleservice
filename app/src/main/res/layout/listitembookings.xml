<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

        <TextView
            android:id="@+id/tBookName"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:text="Main Room Table in Place Name"
            android:textStyle="bold"
            />



        <TextView
            android:layout_below="@id/tBookName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="13sp"
            android:textColor="@color/colorDarkGray"
            android:text="Event Name"
            />

        <TextView
            android:paddingTop="52sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:textColor="@color/colorDarkGray"
            android:text="Fri â€¢ 8:00 PM to 2:00 AM"
            />


        <TextView
            android:paddingTop="65sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:textColor="#6bb771"
            android:text="@string/paid"
            />

        <TextView
            android:paddingStart="30dp"
            android:paddingTop="65dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:textColor="@color/colorDarkGray"
            android:text="@string/waiting_for_approval"
            />

        <TextView
            android:paddingTop="78dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:drawableBottom="@color/colorLightGray"
            android:textColor="@color/colorDarkGray"
            android:text="@string/message_for_special_services"
            />

        <android.support.v7.widget.CardView
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            android:background="@drawable/party"
            >

            <ImageView
                android:id="@+id/ivBooking"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/party"
                android:scaleType="centerCrop"/>

        </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>